<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dealers_left"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="45dp"
            />

        <ImageView
            android:id="@+id/dealers_center"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="45dp"
            />

        <ImageView
            android:id="@+id/dealers_right"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="45dp"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/players_left"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="525dp"
            />

        <ImageView
            android:id="@+id/players_center"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="525dp"
             />

        <ImageView
            android:id="@+id/players_right"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="525dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/deal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal"
        android:textSize="40dp"
        android:textColor="#EC1208"
        android:textStyle="bold"
        style = "@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_vertical|center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chips Remaining: 100"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>